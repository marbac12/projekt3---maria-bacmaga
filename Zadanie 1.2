import numpy as np
import matplotlib.pyplot as plt

K_g, r_g, t0, x0 = 100000, 0.4, 75, 10
K_v, lambda_v = 100000, 0.4
dt, t_max = 0.1, 150

t_values, x_g_values, x_v_values = [t0], [x0], [x0]


for t in np.arange(t0, t_max, dt):

    dx_g = r_g * x_g_values[-1] * np.log(K_g / x_g_values[-1])
    x_g_values.append(x_g_values[-1] + dx_g * dt)
    
    dx_v = lambda_v * x_v_values[-1] * (1 - x_v_values[-1] / K_v)
    x_v_values.append(x_v_values[-1] + dx_v * dt)
    
    t_values.append(t + dt)



plt.plot(t_values, x_g_values, label='Model Gompertza', color = 'red')
plt.plot(t_values, x_v_values, label='Model Verhulsta', color = 'green')

plt.xlabel('czas')
plt.ylabel('objętość guza nowotworowego')
plt.title('Zadanie 1. - Model Gompertza')
plt.title('Zadanie 1. - Porównanie modelu Gompertza i Verhulsta')
plt.legend()
plt.show()
